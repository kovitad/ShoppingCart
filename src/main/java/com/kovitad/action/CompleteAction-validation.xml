<validators>
	<field name="name">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="errors.required" />
		</field-validator>
	</field>
	<field name="surname">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="errors.required" />
		</field-validator>
	</field>
	<field name="email">
		<field-validator type="requiredstring">
			<message key="errors.required" />
		</field-validator>
		<field-validator type="email">
			<message key="errors.invalid" />
		</field-validator>
	</field>
	<field name="address">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="errors.required" />
		</field-validator>

	</field>
	<field name="telephone">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="errors.required" />
		</field-validator>
	</field>

</validators>